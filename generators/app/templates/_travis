notifications:
  email: false

sudo: false

language: node_js

node_js:
  - '5.4.1'

env:
  global:
    - GH_REF: '<%= GH_REF %>'
    - secure: '<%= GH_TOKEN %>'

before_script:
  - 'npm install -g gulp'

before_install:
  - 'npm i'

script:
  - 'npm test'

after_success:
  - 'npm run-script coverage'

before_deploy:
  - 'npm run-script build'

deploy:
  provider: npm
  skip_cleanup: true
  email: '<%= npm_deploy_email %>'
  api_key:
    secure: '<%= npm_deploy_secret %>'
  on:
    tags: true
    repo: '<%= deploy_on_repo %>'
    branch: master
    node: '5.4.1'

after_deploy:
  - ./deploy.sh
